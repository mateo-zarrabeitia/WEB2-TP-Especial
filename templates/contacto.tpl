<div class="contenido">
  <h2>Contactate con nosotros...</h2>
  <form role="form">
    <div class="form-group">
      <label for="email_usuario">Nombre:</label>
      <input type="email" class="form-control" id="name" placeholder="juan perez">
      <label for="email_usuario">Email:</label>
      <input type="email" class="form-control" id="email" placeholder="juan.perez@gmail.com">
      <label for="comentario">Cometario:</label>
      <textarea class="form-control" rows="3" placeholder="Dejanos tu comentario.." id="comentario"></textarea>
    </div>
    <div class="checkbox">
      <label>
        <input type="checkbox" id="suscribir"> Suscribite a nuestras promociones.
      </label>
    </div>
    <button type="submit" class="btn btn-default">Enviar</button>
  </form>

</div>
